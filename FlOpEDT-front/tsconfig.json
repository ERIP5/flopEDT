{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "bootstrap": [
        "./node_modules/types/bootstrap"
      ]
    },
    "isolatedModules": true,
    "strict": true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
